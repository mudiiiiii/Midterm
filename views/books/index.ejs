<h1>Books</h1>
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Favourite Books List </h3>
      <!-- ------------------------ -->
      <!-- FIX THE ADD BUTTON BELOW -->
      <!-- ------------------------ -->
      <a href="/books/new" class="btn btn-primary"><i class="fa fa-plus"></i> Add a book</a>
      <br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">         
          <tr>
              <th class="text-center">Title</th>
              <th class="text-center">Description</th>
              <th class="text-center">Price</th>
              <th class="text-center">Author</th>
              <th class="text-center">Genre</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
          </tr>
            <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < books.length; count++) { %>
            <tr>
              <td><%= books[count].Title %></td>
              <td class="text-center">$<%= books[count].Description %></td>
              <td class="text-center">$<%= books[count].Price %></td>
              <td class="text-center"><%= books[count].Author %></td>
              <td class="text-center"><%= books[count].Genre %></td>
              <td class="text-center">
                <a href="/books/edit/<%= books[count]._id %> " class="btn btn primary">
                  <i class="fas fa pencil alt"></i> Edit</a>
              </td>
         <td class="text-center">
                <a href="/books/delete/<%= books[count]._id %> " class="btn btn danger">
                <i class="fas fa trash alt"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
       <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>
<h2>Search for books</h2>
<form action="/books" method="GET">
  <div>
    <label>Title</label>
    <input type="text" name="title" value="<%= searchOptions.Title %>">
  </div>
  <br>
